{
    "version": 2,
    "name": "send-email-api",

    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "functions": {
        "routes/gmail.js": {
            "memory": 256,
            "maxDuration": 30
        }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.js"
        },
        {
            "src": "/gmail/(.*)",
            "dest": "routes/gmail.js"
        }
    ]

}
